<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>

    <head>
	

        <script>
            var chart;
			
			var chartAgama = <%= @dataAgama.to_json.html_safe %>

            AmCharts.ready(function () {
                // PIE CHART
                chart = new AmCharts.AmPieChart();
                chart.dataProvider = chartAgama;
                chart.titleField = "agama";
                chart.valueField = "jumlah";
                chart.outlineColor = "#FFFFFF";
                chart.outlineAlpha = 0.8;
                chart.outlineThickness = 2;
                chart.balloonText = "[[title]]<br><span style='font-size:14px'><b>[[value]]</b> ([[percents]]%)</span>";
                // this makes the chart 3D
                chart.depth3D = 15;
                chart.angle = 30;
				
				// LEGEND
                legend = new AmCharts.AmLegend();
                legend.align = "center";
                legend.markerType = "circle";
                chart.addLegend(legend);
				
                chart.write("chartdivagamaall");
            });
        </script>
    </head>

    <body>
		<div class="wrapper wrapper-white">
			<div class="col-lg-12">                                    
                <div class="panel panel-default">
					<div class="panel-heading">
                        <h3 class="panel-title">Distribusi Berdasarkan Agama</h3>
                        <ul class="panel-btn">
                            <li><a href="#" class="btn btn-danger panel-collapse"><i class="fa fa-angle-down"></i></a></li> 
							<li><a href="#" class="btn btn-danger" onClick="dev_panel_fullscreen($(this).parents('.panel')); return false;"><i class="fa fa-compress"></i></a></li>		
                         </ul>
                    </div>
                    <div class="panel-body">
						<div id="chartdivagamaall" style="width: 100%; height: 300px;"></div>
					</div>                                        
                </div>
            </div>    
         </div>
    </body>

</html>